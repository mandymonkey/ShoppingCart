<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TabHost
        android:id="@+id/tabhost2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/tab_blue_mode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/tab_bluesetlayout_modeoption" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_blue_read"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/tab_bluesetlayout_readoption" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_blue_gen2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/tab_bluesetlayout_gen2option" />

                </LinearLayout>
                
                 <LinearLayout
                    android:id="@+id/tab_blue_fil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                     <include
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         layout="@layout/tab_bluesetlayout_fil" />

                </LinearLayout>
                
                  <LinearLayout
                    android:id="@+id/tab_blue_fre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                      <include
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          layout="@layout/tab_bluesetlayout_fre" />

                </LinearLayout>
                
                  <LinearLayout
                    android:id="@+id/tab_blue_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                      <include
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          layout="@layout/tab_bluesetlayout_blue" />

                </LinearLayout>
                
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>